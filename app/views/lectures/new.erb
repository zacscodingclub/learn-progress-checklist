<h1>Make a New Lecture</h1>

<% if @message %>
  <div class="alert alert-danger">
    <ul>
      <% @message.each do |message| %>
        <li><strong><%= message %></strong></li>
      <% end %>

      <li>Please try again.</li>
    </ul>
  </div>
<% end %>
<br>

<form action="/lectures" method="post" class="form-horizontal text-center">
  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-4">
      <input type="text" name="lecture[title]" id="title" class="form-control">
    </div>
  </div>
  <br>
  <div class="form-group">
    <label for="url" class="col-sm-2 control-label">URL</label>
    <div class="col-sm-4">
      <input type="text" name="lecture[url]" id="url" placeholder="http://youtube.com" class="form-control">
    </div>
  </div>
  <br>
  <div class="form-group">
    <label for="date_created" class="col-sm-2 control-label">Date Created</label>
    <div class="col-sm-4">
      <input type="date" name="lecture[date_created]" id="date_created" class="form-control">
    </div>
  </div>
  <br>
  <div class="form-group">
    <label for="tags" class="col-sm-2 control-label">Tags</label>
    <% Tag.uniq.pluck(:tag_name).each_with_index do |tag, i| %>
      <input type="checkbox" name="lecture[tag_ids][]" value="<%= tag %>" id="tag_<%= i %>">
        <%= tag %>
      </input>
    <% end %>
  </div>
  <br>
  <div class="form-group">
    <label for="new_tag" class="col-sm-2 control-label">Tag</label>
    <div class="col-sm-4">
      <input type="text" name="tag[tag_name]" id="new_tag" class="form-control" placeholder="and/or, create a NEW tag:">
    </div>
  </div>
  <br>
  <input type="submit" name="Submit">
</form>
