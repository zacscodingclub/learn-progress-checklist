<h1>Make a New Lecture</h1>

<form action="/lectures" method="post">
  <label for="title">Title</label>
  <input type="text" name="lecture[title]" id="title">
  <br>
  <label for="url">URL</label>
  <input type="text" name="lecture[url]" id="url" placeholder="http://youtube.com">
  <br>
  <label for="tags">Tags</label>
  <% Tag.uniq.pluck(:tag_name).each_with_index do |tag, i| %>
    <input type="checkbox" name="lecture[tag_ids][]" value="<%= tag %>" id="tag_<%= i %>">
      <%= tag %>
    </input>
  <% end %>
  <br>
  <p>and/or, create a NEW tag:</p>
  <label for="new_tag">Tag</label>
  <input type="text" name="tag[tag_name]" id="new_tag">
  <br>
  <input type="submit" name="Submit">
</form>

